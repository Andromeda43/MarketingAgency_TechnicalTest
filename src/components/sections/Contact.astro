---
// Contact Section - Brightline Creative
---

<section id="contact" class="contact">
    <div class="container">
      <!-- Floating Background Elements -->
      <div class="contact-bg">
        <div class="bg-orb orb-1"></div>
        <div class="bg-orb orb-2"></div>
        <div class="bg-particles">
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
        </div>
      </div>
  
      <!-- Contact Header -->
      <div class="contact-header">
        <div class="header-badge">Let's Create Magic</div>
        <h2 class="contact-title">
          <span class="title-main">Your success story</span>
          <span class="title-highlight">starts here</span>
        </h2>
        <p class="contact-description">
          Ready to transform your brand and achieve extraordinary results? 
          Let's embark on this incredible journey together. Your vision, our expertise ‚Äì 
          the perfect recipe for digital success.
        </p>
      </div>
  
      <!-- Main Contact Content -->
      <div class="contact-content">
        <!-- Contact Form -->
        <div class="contact-form-container">
          <div class="form-header">
            <h3 class="form-title">Tell us about your project</h3>
            <p class="form-subtitle">Every great partnership begins with a conversation</p>
          </div>
          
          <form class="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" placeholder="John" />
              </div>
              <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" placeholder="Doe" />
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="john@company.com" />
              </div>
              <div class="form-group">
                <label for="company">Company</label>
                <input type="text" id="company" name="company" placeholder="Your Company" />
              </div>
            </div>
            
            <div class="form-group">
              <label for="project">Project Type</label>
              <select id="project" name="project">
                <option value="">Select your project type</option>
                <option value="branding">Brand Identity & Design</option>
                <option value="web">Website Design & Development</option>
                <option value="social">Social Media Management</option>
                <option value="advertising">Digital Advertising</option>
                <option value="strategy">Digital Strategy Consulting</option>
                <option value="other">Other (tell us more below)</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="budget">Project Budget</label>
              <select id="budget" name="budget">
                <option value="">Select your budget range</option>
                <option value="5k-10k">$5,000 - $10,000</option>
                <option value="10k-25k">$10,000 - $25,000</option>
                <option value="25k-50k">$25,000 - $50,000</option>
                <option value="50k+">$50,000+</option>
                <option value="discuss">Let's discuss</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Tell us about your vision</label>
              <textarea id="message" name="message" rows="5" placeholder="Share your goals, challenges, and dreams. What would success look like for your brand?"></textarea>
            </div>
            
            <button type="submit" class="form-submit">
              <span class="submit-text">Start Our Journey Together</span>
              <span class="submit-icon">üöÄ</span>
            </button>
          </form>
        </div>
  
        <!-- Contact Info & Motivation -->
        <div class="contact-info">
          <div class="motivation-section">
            <h4 class="motivation-title">Why choose Brightline?</h4>
            <div class="motivation-list">
              <div class="motivation-item">
                <div class="motivation-icon">‚ú®</div>
                <div class="motivation-text">
                  <h5>Creative Excellence</h5>
                  <p>We don't just follow trends, we create them. Your brand will stand out in ways you never imagined.</p>
                </div>
              </div>
              
              <div class="motivation-item">
                <div class="motivation-icon">üéØ</div>
                <div class="motivation-text">
                  <h5>Results That Matter</h5>
                  <p>Every strategy is designed to drive real, measurable results. Your ROI is our obsession.</p>
                </div>
              </div>
              
              <div class="motivation-item">
                <div class="motivation-icon">ü§ù</div>
                <div class="motivation-text">
                  <h5>True Partnership</h5>
                  <p>We're not just vendors, we're your creative partners invested in your long-term success.</p>
                </div>
              </div>
              
              <div class="motivation-item">
                <div class="motivation-icon">‚ö°</div>
                <div class="motivation-text">
                  <h5>Innovation First</h5>
                  <p>Cutting-edge strategies and technologies that keep you ahead of the competition.</p>
                </div>
              </div>
            </div>
          </div>
  
          <!-- Social Links -->
          <div class="social-section">
            <h4 class="social-title">Follow our journey</h4>
            <div class="social-links">
              <a href="#" class="social-link">
                <img src="https://upload.wikimedia.org/wikipedia/commons/b/b9/2023_Facebook_icon.svg" alt="Facebook" class="social-icon" />
                <span class="social-name">Facebook</span>
              </a>
              <a href="#" class="social-link">
                <img src="https://upload.wikimedia.org/wikipedia/commons/e/e7/Instagram_logo_2016.svg" alt="Instagram" class="social-icon" />
                <span class="social-name">Instagram</span>
              </a>
              <a href="#" class="social-link">
                <img src="https://upload.wikimedia.org/wikipedia/commons/8/81/LinkedIn_icon.svg" alt="LinkedIn" class="social-icon" />
                <span class="social-name">LinkedIn</span>
              </a>
              <a href="#" class="social-link">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/cc/X_icon.svg" alt="X" class="social-icon" />
                <span class="social-name">X</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Form interaction effects (visual only)
      const formInputs = document.querySelectorAll('.contact-form input, .contact-form select, .contact-form textarea');
      
      formInputs.forEach(input => {
        // Focus effects
        input.addEventListener('focus', function() {
          this.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
          this.parentElement.classList.remove('focused');
          if (this.value.trim() !== '') {
            this.parentElement.classList.add('filled');
          } else {
            this.parentElement.classList.remove('filled');
          }
        });
      });
  
      // Form submit effect (no actual submission)
      const form = document.querySelector('.contact-form');
      const submitBtn = document.querySelector('.form-submit');
      
      form?.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Visual feedback
        submitBtn.style.transform = 'scale(0.95)';
        submitBtn.style.background = 'var(--accent-yellow)';
        submitBtn.style.color = 'var(--primary-blue)';
        submitBtn.querySelector('.submit-text').textContent = 'Message Sent! üéâ';
        
        setTimeout(() => {
          submitBtn.style.transform = 'scale(1)';
          submitBtn.style.background = '';
          submitBtn.style.color = '';
          submitBtn.querySelector('.submit-text').textContent = 'Start Our Journey Together';
        }, 2000);
      });
  
      // Intersection Observer for animations
      const observerOptions = {
        threshold: 0.2,
        rootMargin: '0px 0px -50px 0px'
      };
  
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-in');
          }
        });
      }, observerOptions);
  
      // Observe elements
      document.querySelectorAll('.contact-header, .contact-form-container, .contact-info').forEach(el => {
        observer.observe(el);
      });
  
      // Staggered animation for motivation items
      document.querySelectorAll('.motivation-item').forEach((item, index) => {
        item.style.animationDelay = `${index * 0.2}s`;
      });
    });
  </script>
  
  <style is:global>
    @import '../../styles/contact.css';
  </style>